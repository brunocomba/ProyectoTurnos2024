@model Administrador

@{
    ViewData["Title"] = "Actualizar datos personales";

}

<h1>Actualizar datos personales Administrador</h1>

<form asp-action="Update" method="post">
    <!-- Campo oculto para el ID -->
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" readonly />
        <span asp-validation-for="Id" class="text-danger"></span>

    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Apellido"></label>
        <input asp-for="Apellido" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Dni"></label>
        <input asp-for="Dni" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="fechaNacimiento"></label>
        <input asp-for="fechaNacimiento" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="Calle"></label>
        <input asp-for="Calle" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Altura"></label>
        <input asp-for="Altura" class="form-control" />
    </div>

  
    <button type="submit" class="btn btn-primary">Guardar cambios</button>
</form>